#:kivy 1.9.0

<Aclu>
    size:app.ww,app.wh
    canvas:
        Color:
            rgba: 0.00784313725490196,0.0196078431372549,0.07450980392156863,1
        Rectangle:
            pos: self.pos
            size:app.ww,app.wh

    Image:
        id: aclu_face
        source:'Aclu/images/AcluFace1.png'
        # size:app.afw,app.afh
        size_hint:.3,.3
        pos_hint: {"center_x":.5, "center_y":.5} 


    BoxLayout:
        orientation:'vertical'
        size_hint:app.buttonWidth,4*app.buttonHeight
        spacing:3
        pos_hint: {"right":1, "y":0}
        # size: 100, 300
        Button:
            text:"Launch Toolkit"
            background_normal: "Aclu/images/btn_bg.png"
            background_down: "Aclu/images/btn_bg_red.png"
            # size_hint:app.buttonWidth,app.buttonHeight    
            on_press:root.launchToolkit()

        Button:
            # size_hint:app.buttonWidth,app.buttonHeight    
            background_normal: "Aclu/images/btn_bg.png"
            background_down: "Aclu/images/btn_bg_red.png"
            text:"Update Domain" 
            on_press:root.updateDomain()

        Button:
            # size_hint:app.buttonWidth,app.buttonHeight
            background_normal: "Aclu/images/btn_bg.png"
            background_down: "Aclu/images/btn_bg_red.png"
            text:"Study Mode"
            on_press:root.studyMode()

        Button:
            # size_hint:app.buttonWidth,app.buttonHeight
            background_normal: "Aclu/images/btn_bg.png"
            background_down: "Aclu/images/btn_bg_red.png"
            text:"Testing"
            on_press:root.test()